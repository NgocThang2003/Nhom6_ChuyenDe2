<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:background="@drawable/bg_bo_trangchu_sanpham_kh"
            android:gravity="center|top"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHinh1"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/tvTenSP1"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Tên Sản phẩm"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tvMoTa1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Mô tả"/>




            <LinearLayout
                android:paddingBottom="10dp"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvGia1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#E71D0E"
                    android:text="Giá"/>
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/btnDatMua1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Đặt mua"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bg_bo_trangchu_sanpham_kh"
            android:gravity="center|top"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/ivHinh2"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/tvTenSP2"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Tên Sản phẩm"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tvMoTa2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Mô tả"/>





            <LinearLayout
                android:paddingBottom="10dp"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvGia2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#E71D0E"
                    android:text="Giá"/>
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/btnDatMua2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Đặt mua"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>