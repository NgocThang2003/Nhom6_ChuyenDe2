<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Register"
        android:textSize="35dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtTenDK"
            android:drawableLeft="@drawable/baseline_supervised_user_circle_24"
            style="@style/bg_edittext"
            android:hint="Tên đăng ký"
            android:textColorHint="#A89999"
            android:layout_marginBottom="15dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtSDT"
            android:drawableLeft="@drawable/phone"
            style="@style/bg_edittext"
            android:hint="Số điện thoại"
            android:layout_marginBottom="15dp"
            android:textColorHint="#A89999"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtEmail"
            android:drawableLeft="@drawable/email"
            style="@style/bg_edittext"
            android:hint="Email"
            android:layout_marginBottom="15dp"
            android:textColorHint="#A89999"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtMatKhau"
            android:drawableLeft="@drawable/mat_khau"
            style="@style/bg_edittext"
            android:hint="Mat khau"
            android:inputType="textPassword"
            android:layout_marginBottom="15dp"
            android:textColorHint="#A89999"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtNhapLaiMK"
            android:drawableLeft="@drawable/mat_khau"
            style="@style/bg_edittext"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:layout_marginBottom="15dp"
            android:textColorHint="#A89999"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/tvError"
        android:textSize="14dp"
        android:textColor="#E81B0C"
        android:layout_marginTop="-10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:text=""
        />

    <CheckBox
        android:id="@+id/cbcheckboxHienMK"
        android:layout_marginRight="50dp"
        android:textSize="20dp"
        android:text="Hiện mật khẩu"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnXacNhanDK"
        style="@style/btnNhap"
        android:text="Xác nhận"
        android:layout_gravity="center"
        android:background="@drawable/button3"/>
    <TextView
        android:id="@+id/tvLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Log in"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>