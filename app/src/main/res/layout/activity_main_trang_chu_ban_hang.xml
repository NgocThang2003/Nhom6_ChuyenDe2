<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity_TrangChuShipper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4E8F49"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trang chủ"
            android:textColor="#fff"
            android:textSize="20dp"></TextView>

        <LinearLayout
            android:id="@+id/linearLayoutDangXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDangXuat"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#FFF"
                android:paddingLeft="20dp"
                android:text="Đăng xuất"
                android:textColor="#000"></Button>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_dx_shipper"></ImageView>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:background="#C5D52A"
        android:text="CHỨC NĂNG"
        android:textColor="#EF0606"
        android:textSize="30dp"></TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/trangchunhanvienbanhang" />

    <LinearLayout
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#ACD5A8"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivDanhSachDonHang"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_donmoi"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Danh sách đơn hàng"
                    android:textColor="#000"
                    android:textSize="12dp"></TextView>
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivTuVan"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_lienhe"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tư vấn"
                    android:textColor="#000"
                    android:textSize="12dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivDonHangBiHuy"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_donhangbihuy"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Đơn hàng bị hủy"
                    android:textColor="#000"
                    android:textSize="12dp"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivQuanTriKyThuat"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_quantrykythuat"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Quản trị kỹ thuật"
                    android:textColor="#000"
                    android:textSize="12dp"></TextView>
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_danhsachden"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Danh sách đen"
                    android:textColor="#000"
                    android:textSize="12dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivPhanHoiDanhGia"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_phanhoitukhachhang"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Phản hồi đánh giá từ khách hàng"
                    android:textColor="#000"
                    android:textSize="12dp"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivGopY"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_gopytukhachhang"></ImageView>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Góp ý từ khách hàng"
                    android:textColor="#000"
                    android:textSize="12dp"></TextView>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">


    </LinearLayout>

</LinearLayout>