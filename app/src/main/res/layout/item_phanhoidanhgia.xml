<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <Button
                android:visibility="gone"
                android:id="@+id/btnGoiDien"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#5FA65D"
                android:text="Gọi điện"
                android:textColor="#fff"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:visibility="gone"
                    android:id="@+id/btnNhanTin"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="#5FA65D"
                    android:text="Nhắn tin"
                    android:textColor="#fff"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/thanh" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTenKH"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Khách hàng A"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSDT"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:text="Số điện thoại"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivHinh"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTenSP"
                            android:layout_width="308dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="Tên sản phẩm"
                            android:textColor="#000"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="đ"
                            android:textColor="#F30F0F"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tvGia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Giá"
                            android:textColor="#F30F0F"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvMoTa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="Mô tả"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:text="x"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tvSoLuong"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:text="Số lượng"
                            android:textColor="#000"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="Tồn kho:"
                            android:textColor="#000" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvTonKho"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="right"
                            android:text="0"
                            android:textColor="#000" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDiaChi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="Địa chỉ"
                    android:textColor="#888686" />

                <TextView
                    android:id="@+id/tvNgay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:text="Ngày"
                    android:textColor="#888686" />
            </LinearLayout>

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/thanh" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTrangThai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái"
                    android:textColor="#194609" />

                <TextView
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành tiền:"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tvThanhTien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Thành tiền"
                    android:textColor="#F30F0F" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:textColor="#D9D222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuyệt vời"></TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDanhGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Đánh giá"
                android:textColor="#000"
                android:visibility="visible" />
            <LinearLayout
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textColor="#747070"
                    android:textSize="14dp"
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TextView>
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/luotthich_phanhoi"
                    android:scaleType="fitXY"
                    android:layout_width="30dp"
                    android:layout_height="30dp"></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_edt_gopytukhachhang"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:src="@drawable/shop_img_phanhoi">

                </ImageView>
                <EditText
                    android:background="@drawable/bg_edt_gopytukhachhang"
                    android:id="@+id/edtPhanHoi"
                    android:layout_marginLeft="5dp"
                    android:gravity="top|left"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:hint="Phản hồi"
                    android:textColor="#434040"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:layout_gravity="right"
                android:id="@+id/tvGui"
                android:textColor="#F30F0F"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Gửi"></TextView>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnHuyDonHang"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="#5FA65D"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Huỷ đơn hàng"
                    android:textColor="#fff"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnXacNhanDonHang"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:background="#5FA65D"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Xác nhận đơn hàng"
                        android:textColor="#fff"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/thanh2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>