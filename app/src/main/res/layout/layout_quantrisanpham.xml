<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E6F4E1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="17dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:scaleType="fitXY"
            android:src="@drawable/back"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="Quản trị sản phẩm"
            android:textColor="#FF0000"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="73dp"
                android:scaleType="fitXY"
                android:src="@drawable/anhsp"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="11dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Tên sản phẩm: "></TextView>

                    <EditText
                        android:textSize="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edt"></EditText>
                </LinearLayout>

                <LinearLayout

                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="11dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Chú thích: "></TextView>

                    <EditText
                        android:textSize="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edt"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="11dp"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Số lượng: "></TextView>

                    <EditText
                        android:textSize="11dp"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edt"></EditText>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textSize="11dp"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="Gía: "></TextView>

                    <EditText
                        android:textSize="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edt"></EditText>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

</LinearLayout>