<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHinh1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/tvTenSP1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000000"
                android:text="Tên sản phẩm" />
            <TextView
                android:id="@+id/tvMoTa1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mô tả" />

            <TextView
                android:id="@+id/tvGiaSP1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#F44336"
                android:text="Giá sản phẩm" />
            <Button
                android:id="@+id/btnDatMua1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đặt mua" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHinh2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/tvTenSP2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:gravity="center"
                android:text="Tên sản phẩm" />
            <TextView
                android:id="@+id/tvMoTa2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mô tả" />

            <TextView
                android:id="@+id/tvGiaSP2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#F44336"
                android:text="Giá sản phẩm" />

            <Button
                android:id="@+id/btnDatMua2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt mua" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>