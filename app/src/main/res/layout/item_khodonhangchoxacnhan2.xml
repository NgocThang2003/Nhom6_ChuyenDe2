<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:textColor="#fff"
            android:background="#5FA65D"
            android:textSize="12dp"
            android:id="@+id/btnGoiDien"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Gọi điện"/>
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:textColor="#fff"
                android:background="#5FA65D"
                android:textSize="12dp"
                android:id="@+id/btnNhanTin"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Nhắn tin"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/thanh"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="#000"
                android:textSize="12dp"
                android:id="@+id/tvTenKH"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Khách hàng A"/>
            <TextView
               android:textColor="#000"
                android:textSize="12dp"
                android:id="@+id/tvSDT"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Số điện thoại"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivHinh"
                android:scaleType="fitXY"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTenSP"
                        android:layout_width="308dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="Tên sản phẩm"
                        android:textColor="#000"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    <TextView
                        android:textSize="12dp"
                        android:id="@+id/tvGia"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F30F0F"
                        android:text="Giá"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvMoTa"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mô tả"/>

                    <TextView
                       android:textColor="#000"
                        android:id="@+id/tvSoLuong"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="Số lượng"
                        android:textSize="12dp" />
                </LinearLayout>
                <TextView
                    android:gravity="right"
                    android:id="@+id/tvTonKho"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="235dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F30F0F"
                    android:text="Tồn kho"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDiaChi"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#888686"
                android:text="Địa chỉ"/>
            <TextView
                android:id="@+id/tvNgay"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#888686"
                android:text="Ngày"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/thanh"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTrangThai"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#194609"
                android:text="Trạng thái"/>
            <TextView
                android:id="@+id/tvThanhTien"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F30F0F"
                android:text="Thành tiền"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:textColor="#fff"
                android:background="#5FA65D"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12dp"
                android:id="@+id/btnHuyDonHang"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Huỷ đơn hàng"/>
            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#fff"
                    android:background="#5FA65D"
                    android:textSize="12dp"
                    android:id="@+id/btnXacNhanDonHang"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Xác nhận đơn hàng"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/thanh2" />
    </LinearLayout>

</LinearLayout>